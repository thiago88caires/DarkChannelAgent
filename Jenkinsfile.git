EOF
                            echo "âœ… Arquivo .env criado"
                        fi
                        
                        echo "âœ… VerificaÃ§Ã£o de arquivos concluÃ­da"
                    '''
                    
                    sh '''
                        echo "Verificando Docker..."
                        docker --version
                        if command -v docker-compose >/dev/null 2>&1; then
                            docker-compose --version
                        elif docker compose version >/dev/null 2>&1; then
                            docker compose version
                            echo "Usando 'docker compose' ao invÃ©s de 'docker-compose'"
                        else
                            echo "âŒ Docker Compose nÃ£o encontrado!"
                            exit 1
                        fi
                        echo "âœ… Docker verificado"
                    '''
                }
            }
        }
        
        stage('Build Application') {
            steps {
                script {
                    echo "ðŸ—ï¸ Construindo aplicaÃ§Ã£o..."
                    
                    sh '''
                        # Dar permissÃµes de execuÃ§Ã£o
                        chmod +x build.sh maintenance.sh troubleshoot.sh
                        
                        # Verificar espaÃ§o em disco
                        echo "=== Verificando Recursos ==="
                        df -h
                        docker system df
                        echo "=========================="
                        
                        # Executar troubleshooting preventivo
                        echo "ðŸ” Executando verificaÃ§Ãµes preventivas..."
                        ./troubleshoot.sh || echo "Troubleshooting executado (com avisos)"
                        
                        # Executar o script de build
                        echo "ðŸš€ Iniciando build principal..."
                        ./build.sh
                    '''
                }
            }
        }
        
        stage('Health Check') {
            steps {
                script {
                    echo "ðŸ¥ Executando verificaÃ§Ãµes de saÃºde..."
                    
                    sleep(time: 30, unit: 'SECONDS')
                    
                    sh '''
                        echo "Verificando saÃºde dos serviÃ§os..."
                        
                        # FunÃ§Ã£o para testar endpoint
                        test_endpoint() {
                            local url=$1
                            local name=$2
                            local max_attempts=10
                            local attempt=1
                            
                            while [ $attempt -le $max_attempts ]; do
                                echo "Tentando conectar com $name (tentativa $attempt/$max_attempts)..."
                                if curl -f "$url" >/dev/null 2>&1; then
                                    echo "âœ… $name estÃ¡ respondendo"
                                    return 0
                                fi
                                sleep 5
                                ((attempt++))
                            done
                            
                            echo "âŒ $name nÃ£o estÃ¡ respondendo apÃ³s $max_attempts tentativas"
                            return 1
                        }
                        
                        # Testar endpoints
                        test_endpoint "http://localhost:8080/health" "Backend"
                        test_endpoint "http://localhost:3000" "Frontend"  
                        test_endpoint "http://localhost:54321/health" "Supabase"
                        
                        echo "ðŸŽ‰ Todos os serviÃ§os estÃ£o funcionando!"
                    '''
                }
            }
        }
        
        stage('Deploy Status') {
            steps {
                script {
                    echo "ðŸš€ Mostrando status da aplicaÃ§Ã£o..."
                    
                    sh '''
                        echo "=== Status Final da AplicaÃ§Ã£o ==="
                        if command -v docker-compose >/dev/null 2>&1; then
                            docker-compose ps
                        else
                            docker compose ps
                        fi
                        echo ""
                        echo "URLs de acesso:"
                        echo "  Frontend:        http://localhost:3000"
                        echo "  Backend API:     http://localhost:8080"
                        echo "  Supabase:        http://localhost:54321"
                        echo "  Supabase Studio: http://localhost:54323"
                        echo ""
                        echo "ðŸŽ‰ Deploy concluÃ­do com sucesso!"
                    '''
                }
            }
        }
    }
    
    post {
        always {
            script {
                echo "ðŸ§¹ Executando limpeza final..."
                
                sh '''
                    echo "Coletando logs dos containers..."
                    mkdir -p logs
                    if command -v docker-compose >/dev/null 2>&1; then
                        docker-compose logs > logs/docker-compose.log 2>&1 || true
                    else
                        docker compose logs > logs/docker-compose.log 2>&1 || true
                    fi
                '''
                
                archiveArtifacts artifacts: 'logs/**', allowEmptyArchive: true
            }
        }
        
        success {
            script {
                echo "âœ… Pipeline executado com sucesso!"
                
                sh '''
                    echo "ðŸŽ‰ Build concluÃ­do com sucesso!"
                    echo "Data: $(date)"
                    echo "RepositÃ³rio: ${GIT_REPO_URL}"
                    echo "Branch: ${GIT_BRANCH}"
                '''
            }
        }
        
        failure {
            script {
                echo "âŒ Pipeline falhou!"
                
                sh '''
                    echo "=== InformaÃ§Ãµes de Debug ==="
                    echo "Workspace content:"
                    ls -la || true
                    echo ""
                    echo "Docker containers:"
                    docker ps -a || true
                    echo ""
                    echo "Docker images:"
                    docker images || true
                    echo ""
                    echo "Docker compose status:"
                    if command -v docker-compose >/dev/null 2>&1; then
                        docker-compose ps || true
                    else
                        docker compose ps || true
                    fi
                '''
                
                sh '''
                    echo "Fazendo cleanup de emergÃªncia..."
                    if command -v docker-compose >/dev/null 2>&1; then
                        docker-compose down || true
                    else
                        docker compose down || true
                    fi
                '''
            }
        }
    }
}